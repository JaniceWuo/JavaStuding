<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.janice.sportmanage.dao.UserDao">
    <select id="getUserByMessage" resultType="com.janice.sportmanage.bean.User">
        SELECT * FROM easyuser
        WHERE username=#{username} AND password=#{password} AND state=1
    </select>
    
    <select id="getAllUser" resultType="com.janice.sportmanage.bean.User">
        SELECT * FROM easyuser
        <if test="username!=null">
            WHERE username like #{username}
        </if>
        LIMIT #{pageStart},#{pageSize}
    </select>

    <select id="getUserCounts" resultType="java.lang.Integer">
        SELECT count(*) FROM `easyuser`
        <if test="username !=null ">
            WHERE username like #{username}
        </if>
    </select>

    <insert id="addUser">
        INSERT INTO easyuser
        (username,password,email,role,state)
        VALUE(#{username},#{password},#{email},#{role},#{state})
    </insert>

    <select id="getUpdateUser" resultType="com.janice.sportmanage.bean.User">
        SELECT * FROM easyuser WHERE id = #{id}
    </select>

    <update id="editUser">
        UPDATE easyuser SET username = #{username} , password = #{password} ,
        email = #{email} WHERE id = #{id}
    </update>

    <delete id="deleteUser">
        DELETE from easyuser WHERE id=#{id}
    </delete>

    <update id="updateState">
        UPDATE easyuser SET state = #{state} WHERE id = #{id}
    </update>
</mapper>